<?xml version="1.0"?>
<odoo>
	<record id="view_form_checkout_message" model="ir.ui.view">
		<field name="name">Bibliotheque Checkout Mass Message Wizard</field>
		<field name="model">bibliotheque.checkout.massmessage</field>
		<field name="arch" type="xml" >
			<form>
				<group>
					<field name="message_subject" />
					<field name="message_body" />
					<field name="checkout_ids" />
				</group>	

				<footer>
					<button type="object" name="button_send" string="Send Messages" />
					<button special="cancel" string="cancel" class="btn-secondary"/>

				</footer>	
			</form>	
		</field>	
	</record>	
	<act_window id="action_checkout_message" 
				name="Send Messages"
				src_model="bibliotheque.checkout"
				res_model="bibliotheque.checkout.massmessage"
				view_type="form"
				view_mode="form"
				target="new"
				multi="True"
	/>			

	
</odoo>	