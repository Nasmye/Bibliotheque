<odoo>

	<record model="ir.ui.view" id="member_list_view">
      <field name="name">Member list</field>
      <field name="model">bibliotheque.member</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="email"/>
          <field name="card_number"/>  

           
       
        </tree>

      </field>
    </record>


    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="member_form_view">
      <field name="name">Bibliotheque list</field>
      <field name="model">bibliotheque.member</field>
      <field name="arch" type="xml">
        <form>
          <group>


            <field name="name"/>
            <field name="email"/>
            <field name="card_number"/>
          
          </group>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>  

           
         </form> 
      </field>
    </record>









	<record model="ir.actions.act_window" id="member_action_window">
      <field name="name">Member window</field>
      <field name="res_model">bibliotheque.member</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- menu categories -->

    <menuitem name="Members" id="bibliotheque_member_list" parent="bibliotheque.menu_root" action="member_action_window"/>



</odoo>    