    <record model="ir.ui.view" id="book_list_view">
      <field name="name">Book list</field>
      <field name="model">bibliotheque.book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="isbn"/>
          <field name="date_published"/>
          <field name="active"/>
         
       
        </tree>
      </field>
    </record>


    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="book_form_view">
      <field name="name">Bibliotheque list</field>
      <field name="model">bibliotheque.book</field>
      <field name="arch" type="xml">
        <form>
          <group>


            <field name="name"/>
            <field name="isbn"/>
            <field name="date_published"/>
            <field name="active"/>
            <button string="Check isbn" type="object" name="button_check_isbn"></button>
           
          </group>
          <separator string="authors"  />

          <notebook>
            <page string="author">
              <field name="author_ids"/>
            </page> 
            <page string="publisher">
              <field name="publisher_id"/>
            </page>  
          </notebook>  
         </form> 
      </field>
    </record>
    
