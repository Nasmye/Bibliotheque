<odoo>
  <data>
    <!-- explicit list view definition -->
      

    <record model="ir.ui.view" id="bibliotheque_checkout_tree">
      <field name="name">Checkout Tree</field>
      <field name="model">bibliotheque.checkout</field>
      <field name="arch" type="xml">
        <tree>
          
              <field name="member_id"/>
              <field name="request_date"/>
           
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="bibliotheque_checkout_list">
      <field name="name">Checkout List</field>
      <field name="model">bibliotheque.checkout</field>
      <field name="arch" type="xml">
        <form>

          <header>
            <field name="state" invisible="True" />
            <button name="button_done"
                    type="object"
                    string="Return boks"
                    states="open,cancel"
                    class="oe_highlight" />
            <field name="stage_id"
                   widget="statusbar"
                   clickable="True"
                   options="{'fold_field': 'fold'} "/>
          </header>

          <sheet>
            <group>
              <field name="member_id"/>
              <field name="request_date"/>
              <field name="user_id"/>
              <field name="line_ids">
                <tree>
                  <field name="checkout_id" />
                  <field name="book_id" />


                </tree>
              </field>
            </group>
          </sheet>

          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>          
          </div>

        </form>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="checkout_action_window">
      <field name="name">Checkout Window</field>
      <field name="res_model">bibliotheque.checkout</field>
      <field name="view_mode">tree,form,activity,graph,pivot</field>
    </record>
    


    <record model="ir.actions.act_window" id="checkout_stage_action_window">
      <field name="name">Checkout Stage Window</field>
      <field name="res_model">bibliotheque.checkout.stage</field>
      <field name="view_mode">tree,form</field>
    </record>

